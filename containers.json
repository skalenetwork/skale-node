{
  "schain": {
    "name": "skalenetwork/schain",
    "version": "3.14.9-stable.1",
    "custom_args": {
      "ulimits_list": [
        {
          "name": "core",
          "soft": -1,
          "hard": -1
        }
      ],
      "logs": {
        "max-size": "250m",
        "max-file": "5"
      }
    },
    "args": {
      "security_opt": [
        "seccomp=unconfined"
      ],
      "restart_policy": {
        "MaximumRetryCount": 0,
        "Name": "no"
      },
      "network": "host",
      "cap_add": [
        "SYS_PTRACE",
        "SYS_ADMIN",
        "SYS_NICE"
      ]
    }
  },
  "ima": {
    "name": "skalenetwork/ima",
    "version": "1.3.0-beta.1",
    "custom_args": {
      "logs": {
        "max-size": "250m",
        "max-file": "5"
      }
    },
    "args": {
      "restart_policy": {
        "Name": "unless-stopped"
      },
      "network": "host"
    }
  }
}
